<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke"
    tools:context=".SignUpActivity">

    <TextView
        android:id="@+id/textViewCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="38dp"
        android:layout_marginEnd="255dp"
        android:text="Create"
        android:textColor="@color/newbtnColor"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNewAccc"
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="120dp"
        android:text="New Account!"
        android:textColor="@color/newbtnColor"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCreate" />

    <!--Container for input fields-->

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewNewAccc">

        <!--Firstname-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_Firstname"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"

            android:layout_marginEnd="41dp"
            android:hint="First Name"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_person_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_Firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="text"
                android:textColor="@color/black"

                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--lastname-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_Lastname"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="41dp"
            android:hint="Last Name"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_person_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_Lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="text"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--email-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_Email"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="41dp"
            android:hint="Email"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_email_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="text"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--contactnumber-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_ContactNumber"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="41dp"
            android:hint="Contact Number"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_local_phone_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_ContactNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="number"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--username-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_Username"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="41dp"
            android:hint="Username"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_person_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_Username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="text"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>
        <!--password-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_Pass"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="41dp"
            android:hint="Password"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:endIconMode="password_toggle"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_lock_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_Pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--confirm pass-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/outlinedTextFieldLayout_ConfirmPass"
            style="@style/CustomOutlinedTextField"
            android:layout_width="330dp"
            android:layout_height="65dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="41dp"
            android:hint="Confirm Password"
            app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:endIconMode="password_toggle"
            app:hintTextAppearance="@style/CustomHintTextAppearance"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_dailyAgenda"
            app:startIconDrawable="@drawable/baseline_lock_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/outlinedEditText_ConfirmPass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/editextusername"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                tools:layout_editor_absoluteX="4dp"
                tools:layout_editor_absoluteY="378dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!--Signup btn-->
        <Button
            android:id="@+id/outlinedButtonSignUp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="330dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="132dp"
            android:backgroundTint="@color/newbtnColor"
            android:gravity="center"
            android:onClick="SignUpBtnFunction"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:icon="@drawable/baseline_arrow_forward_24"
            app:iconGravity="end"
            app:iconPadding="-20dp"
            app:iconTint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/outlinedTextFieldLayout_Password" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="textViewLoginClicked"
        android:text="Already have an account? Login"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"

        />
</androidx.constraintlayout.widget.ConstraintLayout>